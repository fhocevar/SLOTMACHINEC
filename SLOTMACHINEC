#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define NUM_FRUTAS 5

// FunÃ§Ã£o para gerar uma fruta aleatÃ³ria
const char* getFruta(int indice) {
    switch (indice) {
        case 0: return "ğŸ’"; // Cereja
        case 1: return "ğŸ‹"; // LimÃ£o
        case 2: return "ğŸ‰"; // Melancia
        case 3: return "ğŸŠ"; // Laranja
        case 4: return "ğŸ"; // MaÃ§Ã£
        default: return "";
    }
}

// FunÃ§Ã£o que simula o jogo de caÃ§a-nÃ­queis
void jogar() {
    int i;
    int frutas[3];
    int premio = 0;
    
    // Gera nÃºmeros aleatÃ³rios para as frutas
    for (i = 0; i < 3; i++) {
        frutas[i] = rand() % NUM_FRUTAS; // Gera um nÃºmero aleatÃ³rio de 0 a 4
    }

    // Exibe as frutas "girando"
    printf("Girando...\n");
    for (i = 0; i < 3; i++) {
        printf("[%s] ", getFruta(frutas[i]));
    }
    printf("\n");

    // Verifica se as frutas sÃ£o iguais
    if (frutas[0] == frutas[1] && frutas[1] == frutas[2]) {
        printf("VocÃª ganhou! TrÃªs %s!\n", getFruta(frutas[0]));
        premio = 100; // Exemplo de prÃªmio (vocÃª pode mudar o valor)
    } else {
        printf("Que pena! Tente novamente.\n");
    }

    // Exibe o prÃªmio, se houver
    if (premio > 0) {
        printf("PrÃªmio: %d moedas!\n", premio);
    }
}

int main() {
    // Inicializa o gerador de nÃºmeros aleatÃ³rios
    srand(time(0));

    char escolha;

    printf("Bem-vindo Ã  MÃ¡quina de Frutas! (SimulaÃ§Ã£o de Slot Machine)\n");

    // Loop do jogo
    do {
        printf("\nPressione [Enter] para girar a alavanca ou 'q' para sair...\n");
        escolha = getchar();
        getchar(); // Para consumir o caractere '\n' da entrada anterior

        if (escolha != 'q') {
            jogar();
        }
    } while (escolha != 'q');

    printf("Obrigado por jogar! AtÃ© logo!\n");

    return 0;
}
